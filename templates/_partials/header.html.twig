<header>
    <nav class="flex items-center justify-between flex-wrap bg-indigo-500 px-8 py-5 shadow">
        <div class="flex items-center flex-shrink-0 text-white mr-6">
            <a href="{{ path('app_home') }}" class="font-semibold text-xl tracking-tight">SymfoCorps</a>
        </div>
        <div class="block lg:hidden">
            <button class="flex items-center px-3 py-2 border rounded text-teal-200 border-teal-400 hover:text-white hover:border-white">
                <svg class="fill-current h-3 w-3" viewBox="0 0 20 20" xmlns="http://www.w3.org/2000/svg"><title>Menu</title><path d="M0 3h20v2H0V3zm0 6h20v2H0V9zm0 6h20v2H0v-2z"/></svg>
            </button>
        </div>

        {% if app.user %}
            <div class="w-full block flex-grow lg:flex lg:items-center lg:w-auto">
                <div class="text-sm lg:flex-grow">
                    <a href="{{ path('app_logout') }}" class="block mt-4 lg:inline-block lg:mt-0 text-teal-200 hover:text-white mr-4">
                        Logout
                    </a>
                </div>
            </div>
        {% else %}
            <div class="w-full block flex-grow lg:flex lg:items-center lg:w-auto">
                <div class="text-sm">
                    <a href="{{ path('app_login') }}" class="block mt-4 lg:inline-block lg:mt-0 text-teal-200 hover:text-white mr-4">
                        Login
                    </a>
                </div>
                <div class="text-sm">
                    <a href="{{ path('app_register') }}" class="block mt-4 lg:inline-block lg:mt-0 text-teal-200 hover:text-white mr-4">
                        Register
                    </a>
                </div>
            </div>
        {% endif %}

    </nav>
</header>
